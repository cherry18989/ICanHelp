<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a007.robot.icanhelp.profileActivity.SettingActivity"
    android:orientation="vertical">
<com.a007.robot.icanhelp.view.TitleLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></com.a007.robot.icanhelp.view.TitleLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/newMesgView"
            style="@style/ProfileItems">

            <TextView
                android:id="@+id/newMesgText"
                style="@style/ProfileItemsText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:text="新消息通知" />

            <ImageView
                android:id="@+id/newMesgImg"
                style="@style/WrapContent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_y" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/interval_color"/>

        <RelativeLayout
            android:id="@+id/privacyView"
            style="@style/ProfileItems">

            <TextView
                android:id="@+id/privacyText"
                style="@style/ProfileItemsText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:text="隐私" />

            <ImageView
                android:id="@+id/privacyImg"
                style="@style/WrapContent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_y" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/interval_color"/>

        <RelativeLayout
            android:id="@+id/commonView"
            style="@style/ProfileItems">

            <TextView
                android:id="@+id/commonText"
                style="@style/ProfileItemsText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:text="通用" />

            <ImageView
                android:id="@+id/commonImg"
                style="@style/WrapContent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_y" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/helpAndfbView"
            style="@style/ProfileItems"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/helpAndfbText"
                style="@style/ProfileItemsText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:text="帮助与反馈" />

            <ImageView
                android:id="@+id/helpAndfbImg"
                style="@style/WrapContent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_y" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/interval_color"/>

        <RelativeLayout
            android:id="@+id/aboutUsView"
            style="@style/ProfileItems">

            <TextView
                android:id="@+id/aboutUsText"
                style="@style/ProfileItemsText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:text="关于我们" />

            <ImageView
                android:id="@+id/aboutUsImg"
                style="@style/WrapContent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_y" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/logoutView"
            style="@style/ProfileItems"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/logoutText"
                style="@style/ProfileItemsText"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="退出登录" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
